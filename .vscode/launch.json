{
    "version": "0.1.0",
    "compounds": [
        {
            "name": "Launch All",
            "configurations": [
                "Launch Extension",
                "Launch Server Adapter"
            ]
        }
    ],
    "configurations": [
        {
            "name": "Launch Extension",
            "type": "extensionHost",
            "request": "launch",
            // path to VSCode executable
            "runtimeExecutable": "${execPath}",
            "args": [
                "--disable-extensions",
                "--extensionDevelopmentPath=${workspaceRoot}",
                //"--enable-proposed-api",
                "${workspaceRoot}\\ecl-sample"
            ],
            "outFiles": [
                "${workspaceRoot}/dist/*.js"
            ],
            "stopOnEntry": false,
            "sourceMaps": true,
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Launch Web Extension",
            "type": "pwa-extensionHost",
            "debugWebWorkerHost": true,
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionDevelopmentKind=web"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        },
        {
            "name": "Launch Extension With Other Extensions",
            "type": "extensionHost",
            "request": "launch",
            // path to VSCode executable
            "runtimeExecutable": "${execPath}",
            "args": [
                //                "--disable-extensions",
                "--extensionDevelopmentPath=${workspaceRoot}",
                //"--enable-proposed-api",
                "${workspaceRoot}\\ecl-sample"
            ],
            "outFiles": [
                "${workspaceRoot}/dist/*.js"
            ],
            "stopOnEntry": false,
            "sourceMaps": true,
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Launch Server Adapter",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/dist/debugger.js",
            "args": [
                "--server=4711"
            ],
            "outFiles": [
                "${workspaceRoot}/dist/*.js"
            ],
            "stopOnEntry": false,
            "sourceMaps": true,
            "cwd": "${workspaceRoot}"
        },
        {
            "name": "webview-test",
            "type": "pwa-msedge",
            "request": "launch",
            "url": "file:///${workspaceRoot}/webview-test.html",
            "runtimeArgs": [
                "--disable-web-security"
            ],
            "webRoot": "${workspaceRoot}"
        },
        {
            "name": "index",
            "type": "pwa-msedge",
            "request": "launch",
            "url": "file:///${workspaceRoot}/index.html",
            "runtimeArgs": [
                "--disable-web-security"
            ],
            "webRoot": "${workspaceRoot}"
        },
        {
            "name": "NLS Util",
            "program": "${workspaceFolder}/lib-util/vscode-ecl/util/index.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        }
    ]
}